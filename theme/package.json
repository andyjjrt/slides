{
  "name": "slidev-theme-theme",
  "version": "0.0.0",
  "type": "module",
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/types": "^52.11.0"
  },
  "devDependencies": {
    "@slidev/cli": "^52.11.0"
  },
  "//": "Learn more: https://sli.dev/guide/write-theme.html",
  "slidev": {
    "colorSchema": "both",
    "defaults": {
      "transition": "slide-up",
      "download": true,
      "hideInToc": true,
      "mdc": true,
      "fonts": {
        "sans": "Outfit, Noto Sans TC",
        "mono": "Ubuntu Mono"
      }
    }
  }
}